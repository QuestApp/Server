{% extends 'QuestServerQuestBundle:Question:layout.html.twig' %}

{% block content %}
    <h1>Question list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Locationhuman</th>
                <th>Locationcoord</th>
                <th>Summary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_question_show', { 'id': entity.id, 'questID':entity.quest.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.locationHuman }}</td>
                <td>{{ entity.locationCoord }}</td>
                <td>{{ entity.summary }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_question_show', { 'id': entity.id, 'questID':entity.quest.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_question_edit', { 'id': entity.id, 'questID':entity.quest.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

