{% extends 'QuestServerQuestBundle:Quest:layout.html.twig' %}

{% block content -%}
    <h1>Quest list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Validfrom</th>
                <th>Validuntill</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.validFrom %}{{ entity.validFrom|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.validUntill %}{{ entity.validUntill|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
