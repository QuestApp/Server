{% extends 'QuestServerCommonBundle::base.html.twig' %}
{% block body_in %}
    <div class="navbar /*navbar-inverse*/ navbar-static-top">
      <div class="navbar-inner">
        <div class="container">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="{{ path('admin') }}">Quest Admin</a>
          <div class="nav-collapse collapse">
			{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
				<ul class="nav">
					<li><a href="{{ path('admin') }}">Quests</a></li>
					<li><a href="{{ path('admin_questiontype') }}">QuestionTypes</a></li>
				</ul>
			{% endif %}
            <ul class="nav pull-right">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
		    <li class="dropdown">
		      <a class="dropdown-toggle"
		         data-toggle="dropdown"
		         href="#">
		          {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
		          <b class="caret"></b>
		        </a>
		      <ul class="dropdown-menu">
	  			<li>
	                  <a href="{{ path('fos_user_profile_show') }}">
						Show Profile
	                  </a>
	  			</li>
	  			<li>
	                  <a href="{{ path('fos_user_profile_edit') }}">
						Edit Profile
	                  </a>
	  			</li>
	  			<li>
	                  <a href="{{ path('fos_user_change_password') }}">
						Edit Password
	                  </a>
	  			</li>
	  			<li>
	                  <a href="{{ path('fos_user_security_logout') }}">
						{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
	                  </a>
	  			</li>
		      </ul>
		    </li>
            {% else %}
			<li>
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
			</li>
            {% endif %}
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    
    <div class="container">
	{% block container_in %}
	{% endblock %}
	</div>
{% endblock %}